<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <!-- Show Addon products in POS -->
    <t t-name="Addonspane" t-inherit="point_of_sale.ProductScreen"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//ProductsWidget" position="before">
                        <div class="addonpane scrollable-div container addons-table" style="overflow:auto; background-color: bisque; padding-bottom: 9px;">
                            <div class="row" style="padding-bottom: 5px;">
                                <span class="head">Addons</span>
                                <span class="sub-head">Products</span>
                                <button type="button" class="cbs_close_addons btn btn-block" style="background-color: lightskyblue;" aria-label="Close">
                                      <span aria-hidden="true">CLOSE PRODUCT ADDONS by cbssolutios.ro</span>
                                </button>
                             </div>
                        </div>
