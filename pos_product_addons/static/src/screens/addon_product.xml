<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <!-- Show Addon products in POS -->
    <t t-name="Addonspane" t-inherit="point_of_sale.ProductScreen"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//ProductsWidget" position="before">
             <div class="addonpane container" style="background-color: bisque;">
                <div class="row">
                    <div class="col">
                        <div class="scrollable-div addons-table" style="display: inline-block !important;background-color: bisque; padding-bottom: 9px;">
                            <div class="row" style="padding-bottom: 5px;">
                                <span class="head">Addons</span>
                                <span class="sub-head">Products</span>
                                <button type="button" class="cbs_close_addons" aria-label="Close">
                                      <span aria-hidden="true">cbssolutions.ro_close_addons</span>
                                </button>
                             </div>
                        </div>
                    </div>
                </div>
<!--                 <table class="addons-table">
                    <tr>
                        <th class="addons-head">
                            <span class="head">Addons</span>
                                <button type="button" class="cbs_close_addons" aria-label="Close">
                                      <span aria-hidden="true">cbs_close_addons</span>
                                </button>
                            <br/>
                            <span class="sub-head">Products</span>
                        </th>
                    </tr>
                </table>
 -->             </div>
        </xpath>
    </t>
</templates>
