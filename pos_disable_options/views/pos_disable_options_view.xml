<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="pos_disable_options_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
        <xpath expr="//div[@id='pos_interface_section']" position="inside">
            <div class="col-xs-12 col-md-6 o_setting_box">
					<div class="o_setting_right_pane">
                        <form>
                        <group>
                       
                            <field name="allow_qty" string="Allow Quantity"/>
                            <field name="allow_discount" string="Allow Discount"/>
                            <field name="allow_price" string="Allow Price"/>
                            <field name="allow_customer" string="Allow Customer"/>
                            <field name="allow_delete" string="Allow Delete"/>
                            <field name="allow_payment" string="Allow Payment"/>
                            <field name="allow_add_product" string="Allow Add Product"/>
                        </group>
                         </form>
					</div>
				</div>
            </xpath>
        </field>
    </record>
</odoo>
